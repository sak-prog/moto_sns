<% provide(:title, "新規投稿") %>
<div class="new-post-wrap">
  <div class="d-flex flex-column align-items-center mt-3">
    <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11">
      <div class="card">
        <div class="card-header text-center">
          新規投稿
        </div>
        <div class="card-body">
          <%= form_for @post do |f| %>
            <div class="field form-group mt-2">
              <div class="col pl-0">
                <%= f.text_area :content, class: "form-control", placeholder: "投稿内容" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :image, "写真" %><br>
              <%= f.file_field :image %>
            </div>
            <div class="field form-group form-group-lg">
              <%= f.label :tag_list, class: "sr-only control-label" %>
              <%= text_field_tag 'post[tag_list]', @post.tag_list.join(","), class: "form-control",placeholder: "コンマ（,）毎に区切ることで複数投稿することが出来ます。" %>
            </div>
            <div class="text-center">
              <%= f.submit "投稿する", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 