<% provide(:title, "投稿一覧") %>
<%= search_form_for @q, url: posts_path do |f| %>
  <div class="container pt-3">
    <%= f.label :content_or_tags_name_cont, 'キーワード検索' %>
    <div class="row">
      <div class="col-10">
        <%= f.text_field :content_or_tags_name_cont, placeholder: "キーワードを入力して下さい", class: 'form-control' %>
      </div>
      <div class="col-2">
        <%= f.submit '検索', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
<div class="album py-5">
  <div class="container">
    <div class="row">
      <%= render 'post_body', { posts: @posts } %>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= paginate @posts, window: 2 %>
      </div>
    </div>
  </div>
</div>