<% provide(:title, "ログイン")%>
<div class="container devise-wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :password, "パスワード" %><br>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group col-xs-12 col-md-10 mx-auto">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログインを記憶する" %>
      </div>
    <% end %>
    <div class="text-center login-button">
      <%= f.submit "ログイン", class: "btn btn-success mb mb-1" %><br>
      <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
        <p class="fab fa-facebook btn btn-primary">Facebookでログイン</p>
      <% end %><br>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>