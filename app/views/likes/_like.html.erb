<% like = post.like_user(current_user.id) %>
  <% if like.present? %>
    <%= button_to post_like_path(post, like), method: :delete, remote: true do %> 
      <i class="fas fa-heart red"></i>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(post), remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %> 