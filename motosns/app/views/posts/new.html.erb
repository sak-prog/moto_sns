<% provide(:title, "新規投稿") %>
<div class="new-post-wrap">
  <div class="d-flex flex-column align-items-center mt-3">
    <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11">
      <div class="card">
        <div class="card-header text-center">
          新規投稿
        </div>
        <div class="card-body">
          <%= form_for @post, html: { multipart: true, class: "upload-images p-0 border-0" } do |f| %>
            <div class="form-group row mt-2">
              <div class="col pl-0">
                <%= f.text_field :content, class: "form-control border-0", placeholder: "投稿内容" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :image, "写真" %><br>
              <%= f.file_field :image %>
            </div>
            <div class="text-center">
              <%= f.submit "投稿する", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 