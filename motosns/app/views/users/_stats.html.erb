<% user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(user), class: "btn btn-default btn-xs" do %>
    フォロー：
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
  <% end %>
  <%= link_to followers_user_path(user), class: "btn btn-default btn-xs" do %>
    フォロワー：
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
  <% end %>
</div>