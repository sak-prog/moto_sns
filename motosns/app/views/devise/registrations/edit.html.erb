<% provide(:title, "プロフィールの編集")%>
<div class="container devise-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :introduce, "自己紹介" %>
      <%= f.text_field :introduce, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :manufacturer_ids, 'メーカー' %> 
      <div>
        <%= f.collection_check_boxes :manufacturer_ids, Manufacturer.all, :id, :name do |b| %>
          <div class="form-check form-check-inline">
            <%= b.label class:"label-checkbox" do%>
              <%= b.check_box + b.label %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :motorcycle, "車種" %>
      <%= f.text_area :motorcycle,  class: 'form-control', placeholder: "100文字以内で入力" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :password, "パスワード" %> <i>( 変更しない場合は空白のままにしてください )</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %>文字以上入力してください</em>
      <% end %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :password_confirmation, "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group col-xs-12 col-md-10 mx-auto">
      <%= f.label :current_password, "現在のパスワード" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      <i>( プロフィールを変更するには現在のパスワードが必要です )</i>
    </div>
    <div class="text-center">
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="text-center mt-1">
    <%= button_to "アカウントの削除", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "本当によろしいですか？" }, method: :delete %>
    <%= link_to "戻る", :back, class: "btn btn-default mt-1" %>
  </div>
</div>